---
import Layout from '../layouts/Layout.astro';
import '@fontsource-variable/jetbrains-mono';
---

<Layout title="Hi, I am title">
	<main class="flex h-screen flex-col justify-center bg-gray-900">
		<div class="flex flex-col items-center justify-start my-auto">
			<h1 class="text-4xl md:text-6xl lg:text-8xl font-light text-center text-gray-100">
				Hi, I'm Jerry
			</h1>
			<p class="text-lg md:text-xl lg:text-2xl font-mono text-center text-gray-600 mt-2">
				I'm a fullstack developer
			</p>
			<a href="mailto:contact@jerryhwu.me" class="text-md font-mono text-center text-gray-500 mt-2">
				contact@jerryhwu.me
			</a>
			<p class="text-md md:text-xl lg:text-2xl font-mono text-center text-gray-600 pt-8">
				? Coming Soon
			</p>
		</div>
		<p class="text-xs font-mono text-center text-gray-400 mt-auto mb-4">
			I &lt;3 Astro
		</p>
	</main>
</Layout>
